<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>
    
    <% if (property) { %>
        <form class="add-property-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
            	<input type="hidden" name="id" id="id" value="<%= property._id %>"/>
                <input type="hidden" name="brokerName" id="brokerName" value="<%= property.brokerName %>"/>
                <input type="hidden" name="rev" id="rev" value="<%= property._rev %>"/>
                
                <div class="form-group col-md-4">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" name="address" id="address" value="<%= property.address %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="zip">Zip</label>
                    <input type="text" class="form-control" name="zip" id="zip" value="<%= property.zip %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="bedrooms">Bedrooms</label>
                    <input type="text" class="form-control" name="bedrooms" id="bedrooms" value="<%= property.bedrooms %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="baths">Baths</label>
                    <input type="text" class="form-control" name="baths" id="baths" value="<%= property.baths %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="tags">Tags</label>
                    <input type="text" class="form-control" name="tags" id="tags" value="<%= property.tags %>" >
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="transactionType">Transaction type</label>
                    <select id="transactionType" name="transactionType" class="form-control" required>
	                    <option <% if (property.transactionType == "SALE") {%> selected <% } %> value="SALE">Sale</option>
                    	<option <% if (property.transactionType == "RENT") {%> selected <% } %> value="RENT">Rent</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Property</button>
        </form>
    <% } else { %>
        <p class="text-center">Property Not Found. Go <a href="/add">here</a> to add players.</p>
    <% } %>
</div>
</div>
</body>
</html>